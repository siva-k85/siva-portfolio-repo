datasource db { 
  provider = "postgresql"
  url = env("DATABASE_URL") 
}

generator client { 
  provider = "prisma-client-js" 
}

model ContactMessage {
  id         BigInt   @id @default(autoincrement())
  name       String
  email      String
  message    String
  sourcePage String?
  userAgent  String?
  ip         String?
  spamScore  Float?   @default(0)
  createdAt  DateTime @default(now())
}

model Endorsement {
  id        BigInt   @id @default(autoincrement())
  name      String
  role      String?
  company   String?
  quote     String
  avatarUrl String?
  link      String?
  weight    Int      @default(0)
  createdAt DateTime @default(now())
}

model PressMention {
  id        BigInt   @id @default(autoincrement())
  title     String
  source    String?
  url       String
  occurredOn DateTime?
  createdAt  DateTime @default(now())
}

model SocialCache {
  provider  String
  cacheKey  String
  payload   Json
  expiresAt DateTime
  @@id([provider, cacheKey])
}