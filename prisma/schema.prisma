datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

generator client { 
  provider = "prisma-client-js" 
}

model ContactMessage {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  message    String
  sourcePage String?
  userAgent  String?
  ip         String?
  spamScore  Float?   @default(0)
  createdAt  DateTime @default(now())
}

model NewsletterSubscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  source    String?
  createdAt DateTime @default(now())
}

model Endorsement {
  id        Int      @id @default(autoincrement())
  name      String
  role      String?
  company   String?
  quote     String
  avatarUrl String?
  link      String?
  weight    Int      @default(0)
  createdAt DateTime @default(now())
}

model PressMention {
  id        Int      @id @default(autoincrement())
  title     String
  source    String?
  url       String
  occurredOn DateTime?
  createdAt  DateTime @default(now())
}

model SocialCache {
  provider  String
  cacheKey  String
  payload   String  // Store JSON as string in SQLite
  expiresAt DateTime
  @@id([provider, cacheKey])
}

model ViewCount {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  type      String   // 'project' or 'note'
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
